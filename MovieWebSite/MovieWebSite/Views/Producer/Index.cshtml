
@model IEnumerable<MoviesWebSite.Model.Producer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tr><td colspan="2"><h2>@item._Name</h2></td></tr>
                <tr><td colspan="2"><strong><span>Producer Bio  :    </span></strong>@item._Bio</td></tr>
                <tr><td>Gender : @item._Gender._Name</td><td>Date of Birth : @item._DateOfBirth.ToString("dd/MM/yyyy")</td></tr>
                <tr>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item._Id })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item._Id })
                    </td>
                </tr>
            </table>
        </div>
    </div>
}

