@model MoviesWebSite.Model.Movie
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Add Movie</h2>
        <hr />
        @Html.HiddenFor(model => model._Id);
        @Html.Partial("_Movie", Model)
        <div class="form-group">
            @Html.LabelFor(model => model._Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ImageFile">
                <div>
                    <img src="@Url.Content(Model._Image.ImagePath)" style="width:220px;height:190px" class="img-fluid img-thumbnail" alt="...">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

}
